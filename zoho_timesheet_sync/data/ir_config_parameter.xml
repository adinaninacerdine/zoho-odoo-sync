<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Paramètres par défaut Zoho -->
        <record id="zoho_base_url_default" model="ir.config_parameter">
            <field name="key">zoho.base_url</field>
            <field name="value">https://www.zohoapis.com</field>
        </record>
        
        <!-- Placeholders pour les paramètres OAuth (à configurer par l'utilisateur) -->
        <record id="zoho_client_id_placeholder" model="ir.config_parameter">
            <field name="key">zoho.client_id</field>
            <field name="value"></field>
        </record>
        
        <record id="zoho_client_secret_placeholder" model="ir.config_parameter">
            <field name="key">zoho.client_secret</field>
            <field name="value"></field>
        </record>
        
    </data>
</odoo>