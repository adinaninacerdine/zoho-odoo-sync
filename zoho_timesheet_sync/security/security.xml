<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Groupe de sécurité Zoho -->
        <record id="group_zoho_admin" model="res.groups">
            <field name="name">Zoho Integration Admin</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Can configure Zoho integration settings and manage sync operations</field>
        </record>
        
        <!-- Règle d'accès pour les paramètres Zoho -->
        <record id="rule_zoho_sync_admin" model="ir.rule">
            <field name="name">Zoho Sync: Admin only for sensitive operations</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="groups" eval="[(4, ref('group_zoho_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[('x_sync_status', '!=', False)]</field>
        </record>
        
    </data>
</odoo>