<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vue formulaire de l'assistant -->
        <record id="view_mass_sync_wizard_form" model="ir.ui.view">
            <field name="name">zoho.mass.sync.wizard.form</field>
            <field name="model">zoho.mass.sync.wizard</field>
            <field name="arch" type="xml">
                <form string="Synchronisation en Masse - Zoho">
                    
                    <!-- Configuration -->
                    <div invisible="state != 'draft'">
                        <group>
                            <group string="üéØ Projets √† synchroniser">
                                <field name="project_ids" widget="many2many_tags" 
                                       options="{'no_create': True}"/>
                                <field name="only_pending"/>
                            </group>
                            <group string="üîß Options de synchronisation">
                                <field name="sync_workdrive"/>
                                <field name="sync_cliq"/>
                            </group>
                        </group>
                        
                        <div class="alert alert-info" role="alert">
                            <strong><i class="fa fa-info-circle"/> Information</strong>
                            <p>Cette action va cr√©er automatiquement des dossiers WorkDrive et/ou des canaux Cliq pour les projets s√©lectionn√©s.</p>
                            <p>Les projets d√©j√† synchronis√©s seront ignor√©s si "Seulement les projets non synchronis√©s" est coch√©.</p>
                        </div>
                    </div>
                    
                    <!-- Progression -->
                    <div invisible="state == 'draft'">
                        <group string="üìä Progression">
                            <field name="success_count" readonly="1"/>
                            <field name="error_count" readonly="1"/>
                        </group>
                        
                        <group string="üìù D√©tails" invisible="state == 'draft'">
                            <field name="progress" widget="text" readonly="1" 
                                   options="{'style': 'font-family: monospace; white-space: pre-wrap;'}"/>
                        </group>
                    </div>
                    
                    <!-- √âtat cach√© -->
                    <field name="state" invisible="1"/>
                    
                    <!-- Boutons -->
                    <footer>
                        <button name="action_start_sync" type="object" 
                                string="üöÄ Lancer la Synchronisation" 
                                class="btn-primary"
                                invisible="state != 'draft'"/>
                        
                        <div invisible="state != 'running'">
                            <span class="text-info">
                                <i class="fa fa-spinner fa-spin"/> Synchronisation en cours...
                            </span>
                        </div>
                        
                        <button name="action_view_synced_projects" type="object"
                                string="üìã Voir les Projets Synchronis√©s"
                                class="btn-info"
                                invisible="state != 'done' or success_count == 0"/>
                        
                        <button name="action_close" type="object"
                                string="Fermer" 
                                class="btn-secondary"
                                invisible="state == 'running'"/>
                        
                        <button string="Annuler" class="btn-secondary" special="cancel"
                                invisible="state != 'draft'"/>
                    </footer>
                    
                </form>
            </field>
        </record>
        
        <!-- Action pour l'assistant -->
        <record id="action_mass_sync_wizard" model="ir.actions.act_window">
            <field name="name">Synchronisation en Masse Zoho</field>
            <field name="res_model">zoho.mass.sync.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Synchroniser vos projets existants avec Zoho
                </p>
                <p>
                    Cet assistant vous permet de synchroniser en une fois tous vos projets existants 
                    avec Zoho WorkDrive et Cliq.
                </p>
            </field>
        </record>
        
    </data>
</odoo>