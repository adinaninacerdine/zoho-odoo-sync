<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vue simple pour voir et g√©rer l'acc√®s Zoho -->
        <record id="view_zoho_status_form" model="ir.ui.view">
            <field name="name">zoho.status.form</field>
            <field name="model">ir.config_parameter</field>
            <field name="arch" type="xml">
                <form string="Configuration Zoho" create="false" edit="false" delete="false">
                    <sheet>
                        <div class="oe_title">
                            <h1>Configuration Zoho</h1>
                        </div>
                        
                        <group>
                            <group string="Param√®tres OAuth">
                                <label for="zoho_client_id" string="Client ID"/>
                                <div>
                                    <span class="text-success" t-if="context.get('zoho_client_id')">
                                        <i class="fa fa-check"/> Configur√©
                                    </span>
                                    <span class="text-danger" t-else="">
                                        <i class="fa fa-times"/> Non configur√©
                                    </span>
                                </div>
                                
                                <label for="zoho_client_secret" string="Client Secret"/>
                                <div>
                                    <span class="text-success" t-if="context.get('zoho_client_secret')">
                                        <i class="fa fa-check"/> Configur√©
                                    </span>
                                    <span class="text-danger" t-else="">
                                        <i class="fa fa-times"/> Non configur√©
                                    </span>
                                </div>
                                
                                <label for="zoho_refresh_token" string="Refresh Token"/>
                                <div>
                                    <span class="text-success" t-if="context.get('zoho_refresh_token')">
                                        <i class="fa fa-check"/> Configur√©
                                    </span>
                                    <span class="text-warning" t-else="">
                                        <i class="fa fa-exclamation-triangle"/> Authentification requise
                                    </span>
                                </div>
                            </group>
                        </group>
                        
                        <div class="mt-3">
                            <a href="/zoho/auth/start" target="_blank" class="btn btn-primary btn-lg">
                                <i class="fa fa-key"/> Authentification Zoho
                            </a>
                            
                            <button name="action_mass_sync_projects" type="object" 
                                    string="üîÑ Synchroniser Projets Existants"
                                    class="btn btn-info btn-lg ml-3"/>
                        </div>
                        
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Action pour la configuration Zoho -->
        <record id="action_zoho_status" model="ir.actions.act_window">
            <field name="name">Configuration Zoho</field>
            <field name="res_model">ir.config_parameter</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_zoho_status_form"/>
            <field name="target">current</field>
            <field name="context">{
                'zoho_client_id': 1,
                'zoho_client_secret': 1,
                'zoho_refresh_token': 1
            }</field>
        </record>
        
    </data>
</odoo>